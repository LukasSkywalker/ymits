<Page x:ConnectionId='1'
    x:Class="MusicBird.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicBird"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                                                      >

    <Page.Resources>
        <Style x:Name="transportStyle"  TargetType="Button">
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="75" />
            <Setter Property="FontSize" Value="11" />
        </Style>
    </Page.Resources>


    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:ConnectionId='2' x:Name="searchTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="321"                         Height="38" FontSize="19"/>
        <Button x:ConnectionId='3' x:Name="searchGoButton" Content="Search" HorizontalAlignment="Left" Margin="336,10,0,0" VerticalAlignment="Top"                    />
        <ProgressRing x:Name="searchIndicator" HorizontalAlignment="Left" Margin="420,10,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" Height="38" Width="38"/>
        
        <ListView x:ConnectionId='4' Height="600" HorizontalAlignment="Left" Margin="5,53,0,0" SelectionMode="None"
         Name="trackListElement" VerticalAlignment="Top" Width="1355"                                               IsRightTapEnabled="True"
                  IsItemClickEnabled="true">
            <ListView.ItemContainerTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition/>
                    <AddDeleteThemeTransition/>
                    <ContentThemeTransition/>
                </TransitionCollection>
            </ListView.ItemContainerTransitions>
            <ListView.ItemTemplate>
                <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button x:ConnectionId='13' Grid.Column="0" Style="{StaticResource PlayButtonStyle}"                          Tag=" " Margin="0,0,0,0"/>
                        <!--<StackPanel Orientation="Horizontal" Height="80" Margin="20,0,0,0">-->

                        <StackPanel x:ConnectionId='14' Grid.Column="1" Width="900"                       HorizontalAlignment="Stretch"                                >
                            <TextBlock Text="{Binding artist}"
                               Foreground="#FFC8AB14" FontSize="28" />
                            <TextBlock Text="{Binding title}"
                               TextWrapping="Wrap" FontSize="24" />
                        </StackPanel>
                        <Button x:ConnectionId='15' Grid.Column="2" Style="{StaticResource DownloadButtonStyle}"                              Tag=" " HorizontalAlignment="Right"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border BorderThickness="0,2,0,0" BorderBrush="Gainsboro" Margin="10,672,10,10">
            <StackPanel Orientation="Vertical" Margin="0,2,0,0">
                <StackPanel Orientation="Horizontal" Height="42">
                    <Button x:ConnectionId='6' x:Name="btnPlay"                       
        		    Style="{StaticResource PlayButtonStyle}" Margin="0,0,0,-1"/>
                    <Button x:ConnectionId='7' x:Name="btnStop"                      
            	    Style="{StaticResource StopButtonStyle}"/>
                    <Button x:ConnectionId='8' x:Name="btnReverse"                         
                Style="{StaticResource transportStyle}" Content="Rewind"/>
                    <Button x:ConnectionId='9' x:Name="btnForward"                         
                Style="{StaticResource transportStyle}" Content="Forward"/>
                    <Button x:ConnectionId='10' x:Name="btnMute"                       
                Style="{StaticResource transportStyle}" Content="Mute" />
                    <Slider x:ConnectionId='11' x:Name="volumeSlider" Width="45" Orientation="Vertical"                                    Maximum="10" StepFrequency="1"/>
                    <TextBlock x:Name="downloadStatusTextBlock" Width="100"/>
                    <MediaElement x:ConnectionId='12' x:Name="playerElement" Width="100" AudioCategory="BackgroundCapableMedia"
                                                                                                                             
                                                                                                               
                                                                                                />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="30">
                    <TextBlock x:Name="currentTimeTextBlock" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="00:00" VerticalAlignment="Bottom"/>
                    <Slider x:ConnectionId='5' x:Name="progressSlider"                                     HorizontalAlignment="Stretch" Width="1290"/>
                    <TextBlock x:Name="totalTimeTextBlock" HorizontalAlignment="Right" TextWrapping="Wrap" Text="00:00" VerticalAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
